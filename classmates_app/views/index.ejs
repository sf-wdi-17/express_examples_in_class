<!doctype html>
<html>
<head>
	<title>Classmates App</title>
</head>
<body>
	<h1>Here are all of your classmates:</h1>
	<ul>
		<% for (var i = 0; i < classmates.length; i++) { %>
			<li>Name: <%= classmates[i].name %>, Age: <%= classmates[i].age %></li>
		<% } %>
	</ul>

	<h2>Add a new student</h2>
	<form action="/add" method="POST">
		<input type="text" name="name" placeholder="Name">
		<input type="text" name="age" placeholder="Age">
		<input type="submit">
	</form>
</body>
</html>
